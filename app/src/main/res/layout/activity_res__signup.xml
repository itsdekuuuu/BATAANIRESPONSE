<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".Resident.Res_Signup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/robotobold"
        android:text="REQUEST FORM"
        android:textColor="@color/sky"
        android:textSize="27dp" />

    <EditText
        android:id="@+id/r_fname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#153734"
        android:textColorHint="@color/sky"
        android:fontFamily="@font/robodoreg"
        android:background="@drawable/et2"
        android:hint="Fullname"
        android:inputType="text" />

    <EditText
        android:id="@+id/r_cnum"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#153734"
        android:textColorHint="@color/sky"
        android:fontFamily="@font/robodoreg"
        android:background="@drawable/et2"
        android:hint="Contact Number"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinnerMunicipal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#153734"
        android:layout_weight="1"
        android:background="@drawable/et"
        android:fontFamily="@font/robodoreg"
        android:hint="Incident Classification"
        android:inputType="text"
        android:textColorHint="@color/sky" />

    <Spinner
        android:id="@+id/spinnerBrgy"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/et"
        android:fontFamily="@font/robodoreg"
        android:hint="Incident Classification"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#153734"
        android:textColorHint="@color/sky" />

    <EditText
        android:id="@+id/r_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#153734"
        android:textColorHint="@color/sky"
        android:fontFamily="@font/robodoreg"
        android:background="@drawable/et2"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/r_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#153734"
        android:textColorHint="@color/sky"
        android:fontFamily="@font/robodoreg"
        android:background="@drawable/et2"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/r_signup"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/sky"
        android:fontFamily="@font/robotobold"
        android:gravity="center"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/r_login"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textSize="10sp"
        app:cornerRadius="25dp"
        android:backgroundTint="@color/sky"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:background="#00000000"
        android:fontFamily="@font/qsemib"
        android:text="Already have an Account?"
        android:textColor="#000" />

</LinearLayout>